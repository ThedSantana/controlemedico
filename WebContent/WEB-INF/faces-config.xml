<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
 http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">		
	<!-- Navegacao -->
 	<navigation-rule>
		<from-view-id>pessoa.jsp</from-view-id>
 		<navigation-case>
 			<from-outcome>*</from-outcome>
 			<to-view-id>pessoa.jsp</to-view-id> 			
 		</navigation-case> 		
 	</navigation-rule>
 	
 	<!-- Bean -->	
 	
 	<managed-bean>
 		<managed-bean-name>usuarioController</managed-bean-name>
 		<managed-bean-class>com.sample.controller.UsuarioController</managed-bean-class>
 		<managed-bean-scope>session</managed-bean-scope> 		
 	</managed-bean> 
 	
 	<managed-bean>
 		<managed-bean-name>loginController</managed-bean-name>
 		<managed-bean-class>com.sample.controller.LoginController</managed-bean-class>
 		<managed-bean-scope>session</managed-bean-scope> 		
 	</managed-bean> 
	
</faces-config>